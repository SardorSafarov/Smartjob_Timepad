<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.fragments.UserSingInFragment1">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/pm_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pm_10dp"
            android:src="@drawable/ic_info" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="wrap_content"
            android:padding="@dimen/pm_10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat">


        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pm_20dp"
            android:fontFamily="@font/fonts_jaldi_bold"
            android:maxLines="1"
            android:text="@string/smartjob_attandance"
            android:textSize="@dimen/txt_42sp"
            android:textStyle="bold"
            app:isVertical="true" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_jaldi_bold"
            android:maxLines="1"
            android:text="8:45"
            android:textSize="@dimen/txt_42sp"
            android:textStyle="bold"
            app:isVertical="true" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonts_jaldi_bold"
            android:maxLines="1"
            android:text="Dushanba | 09.01.2023"
            android:textColor="#788895"
            android:textSize="@dimen/txt_22sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_ellipse"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/pm_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/pm_20dp"
            android:background="@drawable/bg_btn_next"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/pm_0dp"
            android:fontFamily="@font/fonts_inter2"
            android:text="@string/fece_id"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/txt_18sp"
            android:textStyle="bold"
            app:elevation="@dimen/pm_0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_qr_code"
            app:layout_constraintEnd_toEndOf="@+id/btn_qr_code"
            app:layout_constraintStart_toStartOf="@+id/btn_qr_code" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_next"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/pm_0dp"

            android:fontFamily="@font/fonts_inter2"
            android:paddingHorizontal="@dimen/pm_50dp"
            android:text="@string/qr_kodni_scannerlash"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/txt_18sp"
            android:textStyle="bold"
            app:elevation="@dimen/pm_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pm_20dp"
            android:background="@drawable/bg_btn_next"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/pm_0dp"
            android:fontFamily="@font/fonts_inter2"
            android:text="@string/pin_kod_va_parol"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/txt_18sp"
            android:textStyle="bold"
            app:elevation="@dimen/pm_0dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_qr_code"
            app:layout_constraintStart_toStartOf="@+id/btn_qr_code"
            app:layout_constraintTop_toBottomOf="@+id/btn_qr_code" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />
</androidx.constraintlayout.widget.ConstraintLayout>